
<div class="banner-content-activites">

  <div class="d-flex justify-content-around">
  <div>
    <div class="pt-5 titre-activites">Découvrez toutes les activites autour de vous ! </div>

    <div class="champ-recherche mt-5">
      <%= form_tag activites_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
            placeholder: " Trouver une activité"
        %>
        <%= submit_tag "Rechercher", class: "button" %>
      <% end %>
    </div>
  </div>

    <div class="ml-3 rounded-circle" id="map" style="width: 220px; height: 220px;"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>"
      data-markers = "<%= @markers.to_json %>"
    ></div>
  </div>

</div>


<div class="container">

  <div class="mt-2 mb-2 titre-selection-activites">Sélection d'activités</div>

  <div class="d-flex justify-content-between">
    <% @activites.each do |activite|  %>

    <div class="card card-activite" style="width: 18rem;">
      <div class="card-img-top">
        <% activite.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 180, width: 286, crop: :fill %>
        <% end %>
      </div>

      <div class="ml-2 card-body">
        <div class="card-title nom-entreprise"><%= activite.entreprise.nom %></div>
        <div><%= activite.nom %></div>
        <div><%= link_to "Détail", activite_path(activite) %></div>
      </div>

    </div>
        <% end %>
  </div>

  <div class="d-block mt-3">
    <div><%= link_to "Ajouter une activité", new_activite_path %></div>
    <div><%= link_to "Retour", root_path %></div>
  </div>
</div>
